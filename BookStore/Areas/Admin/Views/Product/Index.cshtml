@model List<Product>

@if (TempData["success"] != null)
{
    <p>@TempData["success"]</p>
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Products list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>Create new product
            </a>
        </div>
    </div>
</div>
<table id="tblData" class="table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>ISBN</th>
            <th>Author</th>
            <th>Price</th>
            <th>Category</th>
        </tr>
    </thead>
    @* <tbody>
    </tbody> *@
</table>

@section Scripts {
    @{
        <script src="~/js/product.js"></script>
    }
}